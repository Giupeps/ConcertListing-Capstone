@model IEnumerable<ConcertListing_Capstone.Models.Concerto>

@{
    ViewBag.Title = "Index";
}

<h2>Gestione Concerti</h2>

<p class="mx-0 mt-3 create-button">
    @Html.ActionLink("Crea nuovo Concerto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImmagineCopertina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artista.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luogo.NomeStruttura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luogo.Città)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Durata)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Content/ConcertoImg/@Html.DisplayFor(modelItem => item.ImmagineCopertina)" width="200"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artista.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luogo.NomeStruttura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luogo.Città)
        </td>
        
            @{ 

                DateTime data = item.Data;
               <td>

               @data.ToShortDateString()
               </td>
            }
            @*@Html.DisplayFor(modelItem => data)*@
       

        <td>
            @Html.DisplayFor(modelItem => item.Durata) Ora/e
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id = item.IdConcerto }, new {@class="modify-button"})
            @Html.ActionLink("X", "Delete", new { id = item.IdConcerto }, new {@class="delete-button"})
        </td>
    </tr>
}

</table>

